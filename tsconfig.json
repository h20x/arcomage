{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "@ai": ["src/ai"],
      "@audio": ["src/audio"],
      "@game": ["src/game"],
      "@lib": ["src/lib"],
      "@model": ["src/model"],
      "@view": ["src/view"]
    }
  }
}
